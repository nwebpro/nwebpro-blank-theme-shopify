<div class="bg-[#F2F0F1] pt-[35px]">
  <div class="container flex items-center">
    <div class="w-1/2">
      <h1 class="text-black font-integral font-bold text-[64px] leading-[64px] mb-[32px]">FIND CLOTHES THAT MATCHES YOUR STYLE</h1>
      <p class="text-black-60 font-satoshi text-base font-normal leading-[22px] mb-[21px] w-full max-w-[545px]">Browse through our diverse range of meticulously crafted garments, designed to bring out your individuality and cater to your sense of style.</p>
      <a href="#" class="inline-block bg-black text-white rounded-[62px] py-4 px-[54px] text-base font-medium leading-normal mb-12">Shop Now</a>
      <div class="flex space-x-[32px]">
        {% for counter in (1..3) %}
          <div class="w-1/3 border-r border-black-10 last:border-0">
            <h3 class="text-black font-satoshi text-[40px] leading-normal font-bold">200+</h3>
            <p class="text-base leading-[22px] font-normal font-satoshi text-black-60">International Brands</p>
          </div>
        {% endfor %}
      </div>
    </div>
    <div class="w-1/2 flex justify-end">
      <div class="relative -right-20">
        <img
          src="{{ 'hero-image.png' |  asset_url }}"
          draggable="false"
          alt="">
      </div>
    </div>
  </div>
</div>
{% comment %} Client Area Start {% endcomment %}
<div class="bg-black py-10">
  <div class="container">
    <div class="flex items-center justify-between">
      {% for client in (1..5) %}
        <div class="">
          <img
            src="{{ 'client-1.png' | asset_url }}"
            draggable="false"
            alt="">
        </div>
      {% endfor %}
    </div>
  </div>
</div>
{% comment %} NEW ARRIVALS Products {% endcomment %}
<div class="pt-[72px] pb-[64px]">
  <div class="container pb-16 border-b border-black-10">
    <h2 class="text-5xl text-center font-bold text-black leading-normal font-integral mb-[55px]">NEW ARRIVALS</h2>
    <div class="flex flex-wrap gap-5 mb-9">
      {% for new_arrivals in (1..4) %}
        <div>
          <div class="bg-[#F0EEED] rounded-[20px] overflow-hidden mb-4">
            <img
              class="w-full"
              src="{{ 'product.png' |  asset_url }}"
              draggable="false"
              alt="">
          </div>
          <div class="space-y-2">
            <h2 class="text-xl leading-normal font-bold text-black font-satoshi">T-shirt with Tape Details</h2>
            <div class="flex items-center gap-[13px]">
              <div class="flex items-center gap-x-[5px]">
                {% for rating_icon in (1..5) %}
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="19"
                    height="17"
                    viewBox="0 0 19 17"
                    fill="none">
                    <path d="M9.24494 0.255005L11.8641 5.89491L18.0374 6.6431L13.4829 10.8769L14.679 16.9793L9.24494 13.956L3.8109 16.9793L5.00697 10.8769L0.452479 6.6431L6.62573 5.89491L9.24494 0.255005Z" fill="#FFC633" />
                  </svg>
                {% endfor %}
              </div>
              <div class="text-black font-satoshi text-sm font-normal leading-normal">
                4.5/<span class="text-black-60">5</span>
              </div>
            </div>
            <div class="flex items-center gap-[10px]">
              <div class="text-2xl font-satoshi font-bold text-black leading-normal">$120</div>
              <div class="text-2xl font-satoshi font-bold text-black-40 line-through leading-normal">$260</div>
              <div class="bg-discount-bg text-discount py-[6px] px-[14px] rounded-[62px] font-satoshi text-xs font-medium leading-normal">-20%</div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="text-center">
      <a href="#" class="py-4 px-[54px] rounded-[62px] border border-black-10 text-base leading-normal font-medium font-satoshi text-black inline-block">View All</a>
    </div>
  </div>
</div>
