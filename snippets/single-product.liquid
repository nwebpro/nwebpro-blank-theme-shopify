<div>
  <a href="{{ product.url }}" class="bg-[#F0EEED] block rounded-[20px] overflow-hidden mb-4">
    <img
      class="w-full"
      src="{{ product.featured_image |  img_url: 'large' }}"
      draggable="false"
      alt="Top Selling Product {{ top_selling_p }}">
  </a>
  <div class="space-y-2">
    <a href="{{ product.url }}" class="block">
      <h2 class="text-xl leading-normal font-bold text-black font-satoshi">{{ product.title }}</h2>
    </a>
    <div class="flex items-center gap-[13px]">
      <div class="flex items-center gap-x-[5px]">
        {% for rating_icon in (1..5) %}
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="19"
            height="17"
            viewBox="0 0 19 17"
            fill="none">
            <path d="M9.24494 0.255005L11.8641 5.89491L18.0374 6.6431L13.4829 10.8769L14.679 16.9793L9.24494 13.956L3.8109 16.9793L5.00697 10.8769L0.452479 6.6431L6.62573 5.89491L9.24494 0.255005Z" fill="#FFC633" />
          </svg>
        {% endfor %}
      </div>
      <div class="text-black font-satoshi text-sm font-normal leading-normal">
        4.5/<span class="text-black-60">5</span>
      </div>
    </div>
    <div class="flex items-center gap-[10px]">
      <div class="text-2xl font-satoshi font-bold text-black leading-normal">{{ product.price | money }}</div>
      {% if product.compare_at_price > product.price %}
        <div class="text-2xl font-satoshi font-bold text-black-40 line-through leading-normal">
          {{ product.compare_at_price | money }}
        </div>
        {% assign discount = product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price %}
        <div class="bg-discount-bg text-discount py-[6px] px-[14px] rounded-[62px] font-satoshi text-xs font-medium leading-normal">
          -{{ discount | round }}%
        </div>
      {% endif %}
    </div>
  </div>
</div>